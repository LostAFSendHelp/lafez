{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake-build d",
            "group": {
                "isDefault": true,
                "kind": "build",
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "always",
                "panel": "dedicated",
                "focus": true,
                "clear": true
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cmake --build build --target lafez-test && ${workspaceFolder}\\build\\debug\\lafez-test.exe",
            "group": {
                "isDefault": true,
                "kind": "test"
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}